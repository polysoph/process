#!/usr/bin/env node

const metalsmith = require('metalsmith')
const layouts = require('metalsmith-layouts')
const markdown = require('metalsmith-markdown')
const typography = require('metalsmith-typography')
const permalinks = require('metalsmith-permalinks')
const collections = require('metalsmith-collections')
const drafts = require('metalsmith-drafts')
const prefix = require('metalsmith-prefix')

/**
 * Site metadata
 */
const metadata = {
	site: {
		title: 'Polysoph',
		description: 'A process blog for Polysoph, a collaborative research platform.'
	},
	env: process.env.NODE_ENV || 'development'
}

/**
 * Build configuration
 */
const config = {
	source: '../content',
	destination: '../build',
	layouts: '../layouts',
	prefix: '/process',
	clean: false,
	env: process.env.NODE_ENV || 'development'
}

/**
 * Prepare metalsmith
 */
const site = metalsmith(__dirname)
	.source(config.source)
	.destination(config.destination)
	.clean(config.clean)
	.metadata(metadata)
	.use(drafts())
	.use(collections({
		posts: {
			pattern: 'posts/*.md',
			sortBy: 'date',
			reverse: true,
			refer: false
		}
	}))

/**
 * Configure posts
 */
site
	.use(markdown({
		smartypants: true,
		gfm: true
	}))
	.use(typography())
	.use(permalinks('post/:title'))
	.use(layouts({
		engine: 'swig',
		default: 'post.html',
		partials: config.layouts,
		directory: config.layouts
	}))

if (process.env.NODE_ENV === 'production') {
	site.use(prefix('process'))
}

/**
 * Build the site
 */
site.build(err => {
	if (err) throw err
})
